# import libraries
from urllib.request import urlopen
from bs4 import BeautifulSoup 
import re

# specify the url
url = "https://www.steamboat.com/the-mountain/mountain-report#/lifts"

# Connect to the website and return the html to the variable ‘page’
try:
    page = urlopen(url)
except:
    print("Error opening the URL")

# parse the html using beautiful soup and store in variable `soup`
soup = BeautifulSoup(page, 'html.parser')

# Take out the <div> of name and get its value

divparent = soup.find_all('div', attrs={'class':'lift-title-box'})[0]

table = divparent.find('table')

for row in table.find_all('tr'):
    for data in row.find_all('td'):
        print data.string
        

    
